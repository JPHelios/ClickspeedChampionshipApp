<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clickspeedchampionship">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.singleplayer.WinnerSinglePlayerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.animation.SplashScreenActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.animation.LoadingStartActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.multiplayer.TimeBasedActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.multiplayer.WinnerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.NameInputActivity"
            android:noHistory="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.multiplayer.ClickBasedActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.singleplayer.SinglePlayerActivity"
            android:screenOrientation="landscape" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>